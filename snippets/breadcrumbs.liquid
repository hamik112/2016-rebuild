{% if settings.header-show-breadcrumbs %}
<div class="breadcrumbs meta">

  <a href="/">{{ 'general.breadcrumbs.home' | t }}</a> <span class="tasticon-cta"></span>
  {% if template contains "product" %}
    {% if product.collections.size > 0 %}
      {% comment %}<a href="/collections">{{ 'general.breadcrumbs.collections' | t }}</a> <!--<span class="tasticon-cta"></span> <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>-->{% endcomment %}
      <a href="{{ product.collections[0].url }}">{{ product.collections[0].title }}</a>
    {% else %}
      <a href="/collections/all">{{ 'general.breadcrumbs.products' | t }}</a>
    {% endif %}
      <span class="tasticon-cta"></span> <span>{{ product.title }}</span>
  {% elsif template contains "list-collections" %}
    <span>{{ 'collections.listing.header' | t }}</span>
  {% elsif template contains "collection" and current_tags %}
      <a href="/collections">{{ 'general.breadcrumbs.collections' | t }}</a> <span class="tasticon-cta"></span> <a href="/collections/{{ collection.handle }}">{{ collection.title }}</a> <span class="tasticon-cta"></span> <span>{{ current_tags.first }}</span>
  {% elsif template contains "subscription-collection" %}
     {% comment %} <a href="/pages/subscriptions">{{ 'general.breadcrumbs.collections' | t }}</a><span class="tasticon-cta"></span>{% endcomment %}  <span>{{ settings.collection-subscription-title }}</span>
  {% elsif template contains "collection" and collection.handle == 'all' %}
    <span>{{ 'general.breadcrumbs.all_products' | t }}</span>
  {% elsif template contains "collection" %}
    <a href="/collections">{{ 'general.breadcrumbs.collections' | t }}</a> <span class="tasticon-cta"></span> <span>{{ collection.title }}</span>
  {% elsif template contains "blog" and current_tags.size > 0 %}
    <a href="{{ blog.url }}">{{ blog.title }}</a> <span class="tasticon-cta"></span> <span>{{ 'general.breadcrumbs.tagged' | t }}: {% for tag in current_tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}</span>
  {% elsif template contains "blog" %}
    <span>{{ blog.title }}</span>
  {% elsif template contains "page" %}
    <span>{{ page.title }}</span>
  {% elsif template contains "article" %}
    {{ blog.title | link_to: blog.url }} <span class="tasticon-cta"></span> <span>{{ article.title }}</span>
  {% elsif template contains "cart" %}
    <span>{{ 'cart.header' | t }}</span>
  {% elsif template contains "404" %}
    <span>404</span>
  {% elsif template contains "search" %}
    <span>{{ 'general.search.header' | t }}</span>
  {% elsif template contains "customers/login" %}
    <a href="/account">{{ 'general.account' | t }}</a> <span class="tasticon-cta"></span> <span>{{ 'general.login' | t }}</span>
  {% elsif template contains "customers/reset_password" %}
    <a href="/account">{{ 'general.account' | t }}</a> <span class="tasticon-cta"></span> <span>{{ 'customer.reset_password.breadcrumb' | t }}</span>
  {% elsif template contains "customers/activate_account" %}
    <a href="/account">{{ 'general.account' | t }}</a> <span class="tasticon-cta"></span> <span>{{ 'customer.activate_account.breadcrumb' | t }}</span>
  {% elsif template contains "customers/account" %}
    <span>{{ 'general.account' | t }}</span>
  {% elsif template contains "customers/addresses" %}
    <a href="/account">{{ 'general.account' | t }}</a> <span class="tasticon-cta"></span> <span>{{ 'customer.addresses.header' | t }}</span>
  {% elsif template contains "customers/register" %}
    <a href="/account">{{ 'general.account' | t }}</a> <span class="tasticon-cta"></span> <span>{{ 'customer.register.header' | t }}</span>
  {% elsif template contains "customers/order" %}
    <a href="/account">{{ 'general.account' | t }}</a> <span class="tasticon-cta"></span> <span>{{ 'customer.order.header' | t: order_number: order.name }}</span>
  {% endif %}

</div>
{% endif %}
