            <h2>{{ settings.home-left-right-2-title }}</h2>
            <h3>{{ settings.home-left-right-2-title-2 }}</h3>
          {% endif %}
          <div class="rte">
            {{ settings.home-left-right-2-text }}
          </div>
        </div>

        <div class="home-left-right-media {{ settings.home-left-right-2-media-alignment }}">
          {% if settings.home-left-right-2-media == 'image' %}
