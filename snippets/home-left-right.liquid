          {% elsif settings.home-left-right-2-media == 'video' %}
          <div class="home-left-right-video">{{ settings.home-left-right-2-video }}</div>
          {% endif %}
        </div>
        
		<div class="home-left-right-button {{ settings.home-left-right-2-media-alignment }}">
            {% if settings.home-left-right-2-url.size > 0 and settings.home-left-right-2-cta.size > 0 %}
            <p class="home-left-right-cta"><a class="button" href="{{ settings.home-left-right-2-url }}">{{ settings.home-left-right-2-cta }}</a></p>
            {% endif %}
        </div>
        
      </div>
      
    </div>
    {% endif %}

    {% if settings.home-show-left-right-3 %}
