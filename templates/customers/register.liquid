<div class="account-alert">
  <p><span>Product Title</span> added to your bag</p>
  <h3>You need an account to continue</h3>
</div>

<p class="successful-reset">{{ 'customer.reset_password.successful_reset' | t }}</p>
<span class="wine-stain"></span>
<div class="page-wrap clearfix">
  
  <div class="half-wrap">
    <h2>New customer<span class="tasticon-question"></span></h2>
    <h3>Create account</h3>

    {% form 'create_customer' %}

    {% if form.errors %}
      {{ form.errors | default_errors }}
    {% endif %}

    <div class="input-wrapper">
      <label for="customer[first_name]">First name</label>
      <input type="text" placeholder="" value="{{ form.first_name }}" name="customer[first_name]" class="{% if form.errors contains 'first_name' %}error{% endif %}">
    </div>

    <div class="input-wrapper">
      <label for="customer[last_name]">Last name</label>
      <input type="text" placeholder="" value="{{ form.last_name }}" name="customer[last_name]" class="{% if form.errors contains 'last_name' %}error{% endif %}">
    </div>

    <div class="input-wrapper">
      <label for="customer[email]">Email address</label>
      <input type="text" placeholder="" value="{{ form.email }}" name="customer[email]" class="{% if form.errors contains 'email' %}error{% endif %}">
    </div>

    <div class="input-wrapper">
      <label for="customer[password]">Password</label>
      <input type="password" placeholder="" value="" name="customer[password]" class="{% if form.errors contains 'password' %}error{% endif %}">
    </div>

    <div class="input-wrapper last">
      <input type="submit" class="button" value="Create account">
       or <a href="/">return to store</a>
    </div>

  {% endform %}
  </div>
  
  <div class="half-wrap">
    <h2>Already a customer<span class="tasticon-question"></span></h2>
    <h3>Sign in</h3>
    <div class="customer-login">
      {% form 'customer_login' %}

        {% if form.errors %}
          <p class="error-message banner">{{ 'customer.login.error' | t }}</p>
        {% endif %}

        <div class="input-wrapper">
          <label>Email address</label>
          <input type="text" placeholder="{{ 'general.email' | t }}" value="{{ form.email }}" name="customer[email]">
        </div>

        <div class="input-wrapper">
          <label>Password</label>
          <input type="password" placeholder="{{ 'general.password' | t }}" name="customer[password]">
        </div>

        <div class="input-wrapper last">
          <input type="submit" class="button" value="Sign in">
          <span class="toggle-forgetfulness"><span>{{ 'customer.login.forgot_password' | t }}</span></span>
        </div>

      {% endform %}
    </div>

    <div class="recover-password">
      {% form 'recover_customer_password' %}

        <p>{{ 'customer.reset_password.subtext' | t }}</p>

        {% if form.posted_successfully? %}
          <span class="reset-check" data-successful-reset="true"></span>
        {% endif %}

        <div class="input-wrapper">
          <label>{{ 'general.email' | t }}</label>
          <input type="text" placeholder="{{ 'general.email' | t }}" value="{{ form.email }}" name="email" class="{% if form.errors %}error{% endif %}">

          {% if form.errors %}
            <p class="error-message">{{ form.errors.messages['form'] }}</p>
          {% endif %}
        </div>

        <div class="input-wrapper reset-button last">
          <input type="submit" class="button" value="{{ 'customer.reset_password.submit' | t }}">
          or <span class="toggle-forgetfulness"><span>Cancel</span></span>
       </div>
      {% endform %}
    </div>
  </div>
  <img src="{{ 'wine-box.png' | asset_url }}" class="wine-box" />
</div>
<span class="wine-stain-4"></span>
