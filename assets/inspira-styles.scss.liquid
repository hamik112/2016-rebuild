/* datepicker styles */
#datepicker{
  .ui-datepicker{
    width: 285px;
    font-size:12px;
    border:1px solid {{ settings.accent-color }};
    .ui-datepicker-header{
      border: 0;
      background: none;
      color: {{ settings.accent-color }};
      .ui-icon{
        background-image:url({{ 'sprite.png' | asset_url }});
        background-repeat:no-repeat;
        background-size:400px;
        background-position: -148px 2px;
      }
      .ui-datepicker-prev{
        cursor:pointer;
        background:none;
        .ui-icon{
          -ms-transform: rotate(180deg);
          -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
        }
      }
      .ui-datepicker-next{
        cursor:pointer;
      }
      .ui-state-hover{
        border:0 !important;
        background:transparent !important;
      }
      .ui-datepicker-prev.ui-state-hover.ui-datepicker-prev-hover{
        top:2px;
        left:2px;
      }
      .ui-datepicker-next.ui-state-hover.ui-datepicker-next-hover{
        top:2px;
        right:2px;
      }
    }
    table{
      border:0;
      text-align:center;
      th{
        color: {{ settings.accent-color }};
        font-weight:500;
        border:2px solid #ffffff !important;
      }
      td{
        background:transparent !important;
        border:2px solid #ffffff !important;
        span,a{
          background:rgba(134,86,124,0.4);
          font-weight:500;
          color:#ffffff;
          border:0;
          text-align:center;
          margin:0 5px;
        }
      }
      td.ui-datepicker-unselectable{
        background:transparent !important;
        span,a{
          background:#999999;
        }
      }
      td.ui-datepicker-current-day{
        background:transparent !important;
        span,a{
          background:{{ settings.heading-color }};
        }
      }
    }
  }            
}

