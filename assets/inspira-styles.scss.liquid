.voucher-alert{
  display:none;
  color:#ffffff;
  background:{{ settings.accent-hover-color }};
  width:100%;
  text-align:center;
  position:fixed;
  z-index:100;
  top:0;
  -webkit-transition: height 1s;
     -moz-transition: height 1s;
          transition: height 1s;
  .close-me{
    position:absolute;
    right:30px;
    top:15px;
    width:20px;
    height:20px;
    cursor:pointer;
    &:before{
      content:' ';
      -webkit-transform:rotate(45deg);
      -moz-transform:rotate(45deg);
      transform:rotate(45deg);
      background-color:rgba(255,255,255,0.6);
      width:2px;
      height:14px;
      display:block;
      margin-left:10px;
    }
    &:after{
      content:' ';
      -webkit-transform:rotate(-45deg);
      -moz-transform:rotate(-45deg);
      transform:rotate(-45deg);
      background-color:rgba(255,255,255,0.6);
      width:2px;
      height:14px;
      display:block;
      position: absolute;
      top:0px;
      left:0px;
      margin-left:10px;
    }
  }
  p{
    font-size:14px;
    // font-family:'Bodoni';
    margin:0;
    padding:11px 0 7px;
    text-transform: uppercase;
  }
}

